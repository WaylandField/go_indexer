# JSON-RPC endpoint
RPC_URL=http://127.0.0.1:8545

# MySQL DSN for compute storage
DB_DSN=root:@tcp(127.0.0.1:3306)/bcindex?parseTime=true&multiStatements=true

# MySQL DSN for ordering state (block hashes + last processed)
STATE_DB_DSN=root:@tcp(127.0.0.1:3306)/bcindex_state?parseTime=true&multiStatements=true

# HTTP server bind address
HTTP_ADDR=:8080

# Redis address for log query cache (optional)
REDIS_ADDR=127.0.0.1:6379

# OpenTelemetry exporter endpoint (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=

# Contract address to filter logs (optional)
CONTRACT_ADDRESS=

# Event topic0 to filter logs (optional)
# Emitted(address,uint256,bytes)
TOPIC0=

# Indexer controls
START_BLOCK=0
CONFIRMATIONS=0
BATCH_SIZE=1000
POLL_INTERVAL=5s

# Kafka settings
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=bcindex-logs
KAFKA_GROUP_ID=bcindex-compute
# Chain IDs to consume (comma-separated) for compute streaming
CHAIN_IDS=
